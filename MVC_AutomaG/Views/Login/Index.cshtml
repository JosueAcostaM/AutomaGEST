@{
    Layout = null; 
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Maestrías</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        /* Ajustes específicos para arreglar lo que se tapa */
        body.login-page {
            margin: 0;
            padding: 0;
            background-color: #F3F4F6;
            font-family: 'Inter', sans-serif;
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Cambiado de center a flex-start para controlar el scroll */
            min-height: 100vh;
            padding-top: 40px; /* Espacio extra arriba para que no se tape el logo */
            padding-bottom: 40px;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Arreglo del Logo */
        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-logo-icon {
            width: 50px;
            height: 50px;
            background: #D91016;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            margin: 0 auto 15px auto;
            box-shadow: 0 4px 12px rgba(217, 16, 22, 0.2);
        }

        .login-main-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: #111827;
            margin-bottom: 5px;
        }

        .login-institution {
            color: #6B7280;
            font-size: 0.9rem;
        }

        /* Estilo de la Card */
        .login-card {
            background: white;
            padding: 40px;
            border-radius: 16px;
            width: 100%;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            border: 1px solid #E5E7EB;
        }

        .login-card-title {
            font-weight: 700;
            font-size: 1.4rem;
            color: #111827;
            margin-bottom: 8px;
            text-align: center;
        }

        .login-card-description {
            color: #6B7280;
            font-size: 0.9rem;
            margin-bottom: 25px;
            text-align: center;
        }

        /* Inputs */
        .form-group { margin-bottom: 20px; }
        .form-label { 
            display: block; 
            font-weight: 500; 
            font-size: 0.85rem; 
            margin-bottom: 8px;
            color: #374151;
        }

        .input-with-icon {
            position: relative;
            display: flex;
            align-items: center;
        }

        .input-icon {
            position: absolute;
            left: 12px;
            color: #9CA3AF;
            width: 18px;
        }

        .form-input {
            width: 100%;
            padding: 12px 12px 12px 40px;
            background-color: #F9FAFB;
            border: 1px solid #E5E7EB;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.2s;
        }

        .form-input:focus {
            outline: none;
            border-color: #D91016;
            background-color: #fff;
            box-shadow: 0 0 0 3px rgba(217, 16, 22, 0.1);
        }

        /* Botón */
        .btn-primary {
            background-color: #D91016;
            color: white;
            border: none;
            padding: 12px;
            border-radius: 8px;
            width: 100%;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s;
            margin-top: 10px;
        }

        .btn-primary:hover { background-color: #b30d12; }

        .login-footer-text {
            margin-top: 25px;
            text-align: center;
            font-size: 0.9rem;
            color: #4B5563;
        }

        .register-link {
            color: #D91016;
            text-decoration: none;
            font-weight: 600;
        }

        .login-copyright {
            margin-top: 30px;
            color: #9CA3AF;
            font-size: 0.8rem;
        }
    </style>
</head>
<body class="login-page">

    <div class="login-container">
        <div class="login-header">
            <div class="login-logo-icon">
                <i data-lucide="graduation-cap"></i>
            </div>
            <h1 class="login-main-title">Sistema de Maestrías</h1>
            <p class="login-institution">Universidad Técnica del Norte - Facultad de Posgrado</p>
        </div>

        <div class="login-card">
            <div class="login-card-header">
                <h2 class="login-card-title">Iniciar Sesión</h2>
                <p class="login-card-description">Ingrese sus credenciales para continuar</p>
            </div>

            <form asp-action="Login" method="post" class="login-form">
                <div class="form-group">
                    <label for="email" class="form-label">Correo Electrónico</label>
                    <div class="input-with-icon">
                        <i data-lucide="mail" class="input-icon"></i>
                        <input type="email" class="form-input" name="email" id="email" required placeholder="nombre@utn.edu.ec">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-with-icon">
                        <i data-lucide="lock" class="input-icon"></i>
                        <input type="password" class="form-input" name="password" id="password" required placeholder="••••••••">
                    </div>
                </div>

                <button type="submit" class="btn-primary">
                    Ingresar
                </button>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div style="margin-top: 15px; color: #D91016; font-size: 0.85rem; text-align: center; display: flex; align-items: center; justify-content: center; gap: 5px;">
                        <i data-lucide="alert-circle" size="16"></i>
                        <span>@ViewBag.ErrorMessage</span>
                    </div>
                }
            </form>

           
        </div>

        <div class="login-copyright">
            <p>&copy; 2026 Universidad Técnica del Norte</p>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>