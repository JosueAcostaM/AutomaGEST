@{
    Layout = null; /* IMPORTANTE: Para que no cargue el menú lateral aquí */
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Maestrías</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="login-page">

    <div class="login-container">
        <div class="login-header">
            <div class="login-logo">
                <div class="login-logo-icon">
                    <i data-lucide="graduation-cap"></i>
                </div>
            </div>
            <h1 class="login-main-title">Sistema de Maestrías</h1>
            <p class="login-institution">Universidad Técnica del Norte - Facultad de Posgrado</p>
        </div>

        <div class="login-card">
            <div class="login-card-header">
                <h2 class="login-card-title">Iniciar Sesión</h2>
                <p class="login-card-description">Ingrese sus credenciales para continuar</p>
            </div>

            <form asp-action="Login" method="post" class="login-form">

                <div class="form-group">
                    <label for="email" class="form-label">Correo Electrónico</label>
                    <div class="input-with-icon">
                        <i data-lucide="mail" class="input-icon"></i>
                        <input type="email" class="form-input" name="email" id="email" required placeholder="nombre@utn.edu.ec">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-with-icon">
                        <i data-lucide="lock" class="input-icon"></i>
                        <input type="password" class="form-input" name="password" id="password" required placeholder="••••••••">
                    </div>
                </div>

                <button type="submit" class="btn-primary btn-block">
                    Ingresar
                </button>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message-box">
                        <i data-lucide="alert-circle"></i>
                        <span>@ViewBag.ErrorMessage</span>
                    </div>
                }
            </form>

            <div class="login-footer-text">
                ¿No tienes cuenta? <a asp-action="Register" class="register-link">Registrarse</a>
            </div>
        </div>

        <div class="login-copyright">
            <p>&copy; 2026 Universidad Técnica del Norte</p>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>