@{
    Layout = null;
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema Maestrías</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="login-page">

    <div class="login-container">
        <div class="login-header">
            <div class="login-logo">
                <div class="login-logo-icon">
                    <i data-lucide="graduation-cap"></i>
                </div>
            </div>
            <h1 class="login-main-title">Crear Cuenta</h1>
            <p class="login-institution">Complete el formulario para registrarse</p>
        </div>

        <div class="login-card">

            <form method="post" class="login-form">

                <div class="form-group">
                    <label for="nombre" class="form-label">Nombres</label>
                    <div class="input-with-icon">
                        <i data-lucide="user" class="input-icon"></i>
                        <input type="text" class="form-input" id="nombre" name="nombre" required placeholder="Ingrese sus nombres">
                    </div>
                </div>

                <div class="form-group">
                    <label for="apellido" class="form-label">Apellidos</label>
                    <div class="input-with-icon">
                        <i data-lucide="user" class="input-icon"></i>
                        <input type="text" class="form-input" id="apellido" name="apellido" required placeholder="Ingrese sus apellidos">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Correo electrónico</label>
                    <div class="input-with-icon">
                        <i data-lucide="mail" class="input-icon"></i>
                        <input type="email" class="form-input" id="email" name="email" required placeholder="nombre@utn.edu.ec">
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-with-icon">
                        <i data-lucide="lock" class="input-icon"></i>
                        <input type="password" class="form-input" id="password" name="password" required placeholder="Mínimo 6 caracteres">
                    </div>
                </div>

                <div class="form-group">
                    <label for="ConfPassword" class="form-label">Confirmar Contraseña</label>
                    <div class="input-with-icon">
                        <i data-lucide="check-circle" class="input-icon"></i>
                        <input type="password" class="form-input" id="ConfPassword" name="ConfPassword" required placeholder="Repita su contraseña">
                    </div>
                </div>

                <button type="submit" class="btn-primary btn-block">
                    Registrar
                </button>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message-box">
                        <i data-lucide="alert-circle"></i>
                        <span>@ViewBag.ErrorMessage</span>
                    </div>
                }

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="success-message-box">
                        <i data-lucide="check-circle"></i>
                        <span>@ViewBag.SuccessMessage</span>
                    </div>
                }

            </form>

            <div class="login-footer-text">
                ¿Ya tienes cuenta? <a href="@Url.Action("Index", "Login")" class="register-link">Iniciar sesión</a>
            </div>
        </div>

        <div class="login-copyright">
            <p>&copy; 2026 Universidad Técnica del Norte</p>
        </div>
    </div>

    <script>
        lucide.createIcons();
    </script>
</body>
</html>