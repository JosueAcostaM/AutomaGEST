@{
    ViewData["Title"] = "Registro de Usuario Administrativo";
}

@section Breadcrumb {
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
    <li class="breadcrumb-item"><a asp-controller="Accounts" asp-action="ListUsuarios">Personal</a></li>
    <li class="breadcrumb-item active" aria-current="page">Nuevo Registro</li>
}

<link rel="stylesheet" href="~/css/login-register.css" asp-append-version="true" />

<div class="d-flex justify-content-center pt-4">
    <div class="login-container" style="margin-top: 0;">

        <div class="login-header">
            <div class="login-logo-icon">
                <i data-lucide="graduation-cap"></i>
            </div>
            <h1 class="login-main-title">Nuevo Usuario</h1>
            <p class="login-institution">Universidad Técnica del Norte</p>
        </div>

        <div class="login-card">
            <form method="post" class="login-form">
                <div class="form-group">
                    <label for="nombre" class="form-label">Nombres</label>
                    <div class="input-with-icon">
                        <i data-lucide="user" class="input-icon"></i>
                        <input type="text" class="form-input" id="nombre" name="nombre" required placeholder="Ingrese nombres">
                    </div>
                </div>

                <div class="form-group">
                    <label for="apellido" class="form-label">Apellidos</label>
                    <div class="input-with-icon">
                        <i data-lucide="user" class="input-icon"></i>
                        <input type="text" class="form-input" id="apellido" name="apellido" required placeholder="Ingrese apellidos">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="form-label">Correo electrónico</label>
                    <div class="input-with-icon">
                        <i data-lucide="mail" class="input-icon"></i>
                        <input type="email" class="form-input" id="email" name="email" required placeholder="nombre@utn.edu.ec">
                    </div>
                </div>
                <div class="utn-form-item">
                    <label class="utn-label">Rol del Sistema</label>
                    <select name="idrol" class="utn-field" required>
                        <option value="">-- Seleccione un Rol --</option>
                        @if (ViewBag.Roles != null)
                        {
                            foreach (var rol in (IEnumerable<Modelos_AutomaG.Roles>)ViewBag.Roles)
                            {
                                <option value="@rol.idrol">@rol.nombrerol</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="password" class="form-label">Contraseña</label>
                    <div class="input-with-icon">
                        <i data-lucide="lock" class="input-icon"></i>
                        <input type="password" class="form-input" id="password" name="password" required placeholder="Mínimo 6 caracteres">
                    </div>
                </div>

                <div class="form-group">
                    <label for="ConfPassword" class="form-label">Confirmar Contraseña</label>
                    <div class="input-with-icon">
                        <i data-lucide="check-circle" class="input-icon"></i>
                        <input type="password" class="form-input" id="ConfPassword" name="ConfPassword" required placeholder="Repita contraseña">
                    </div>
                </div>

                <button type="submit" class="btn-primary">
                    <i data-lucide="user-plus" style="width:18px; margin-right:8px; vertical-align:middle;"></i> Registrar Usuario
                </button>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="error-message-box">
                        <i data-lucide="alert-circle"></i>
                        <span>@ViewBag.ErrorMessage</span>
                    </div>
                }

                @if (ViewBag.SuccessMessage != null)
                {
                    <div class="success-message-box">
                        <i data-lucide="check-circle"></i>
                        <span>@ViewBag.SuccessMessage</span>
                    </div>
                }
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            lucide.createIcons();
 
    </script>
}