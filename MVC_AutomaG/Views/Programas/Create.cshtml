@model Modelos_AutomaG.Programas

@{
    ViewData["Title"] = "Registrar Programa";
}

<link rel="stylesheet" href="~/css/programa-form.css" asp-append-version="true" />

<div class="utn-form-container">

    <div class="utn-form-header">
        <h1 class="utn-title">Nuevo Programa Académico</h1>
        <p class="utn-subtitle">Complete la información para añadir una nueva oferta académica</p>
    </div>

    <div class="utn-card">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            @* Mostrar error de servidor *@
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" style="margin-bottom:1rem;">
                    @ViewBag.Error
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:1rem;"></div>

            <div class="utn-grid">


                <div class="utn-form-item">
                    <label asp-for="nombrepro" class="utn-label">Nombre Oficial</label>
                    <input asp-for="nombrepro" class="utn-field" placeholder="Ej. Maestría en Software" required />
                    <span asp-validation-for="nombrepro" class="text-danger"></span>
                </div>

                <div class="utn-form-item">
                    <label asp-for="idcam" class="utn-label">Campo de Conocimiento</label>
                    <select asp-for="idcam" class="utn-field" required>
                        <option value="">-- Seleccione un Campo --</option>
                        @if (ViewBag.CamposConocimientos != null)
                        {
                            foreach (var c in (IEnumerable<Modelos_AutomaG.CamposConocimiento>)ViewBag.CamposConocimientos)
                            {
                                <option value="@c.idcam">@c.nombrecam</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="idcam" class="text-danger"></span>
                </div>

                <div class="utn-form-item">
                    <label asp-for="idniv" class="utn-label">Nivel</label>
                    <select asp-for="idniv" class="utn-field" required>
                        <option value="">-- Seleccione un Nivel --</option>
                        @if (ViewBag.Nivel != null)
                        {
                            foreach (var n in (IEnumerable<Modelos_AutomaG.Niveles>)ViewBag.Nivel)
                            {
                                <option value="@n.idniv">@n.nombreniv</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="idniv" class="text-danger"></span>
                </div>

                <div class="utn-form-item">
                    <label asp-for="idmod" class="utn-label">Modalidad</label>
                    <select asp-for="idmod" class="utn-field" required>
                        <option value="">-- Seleccione una Modalidad --</option>
                        @if (ViewBag.Modalidad != null)
                        {
                            foreach (var m in (IEnumerable<Modelos_AutomaG.Modalidades>)ViewBag.Modalidad)
                            {
                                <option value="@m.idmod">@m.nombremod</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="idmod" class="text-danger"></span>
                </div>

                @* =====================
                   PRECIOS (NUEVO IDPRE)
                   ===================== *@
                <div class="utn-form-item">
                    <label class="utn-label">Matrícula</label>
                    <input name="matriculapre" class="utn-field" type="number" step="0.01" min="0" required />
                </div>

                <div class="utn-form-item">
                    <label class="utn-label">Arancel</label>
                    <input name="arancelpre" class="utn-field" type="number" step="0.01" min="0" required />
                </div>

                <div class="utn-form-item">
                    <label class="utn-label">Inscripción</label>
                    <input name="inscripcionpre" class="utn-field" type="number" step="0.01" min="0" required />
                </div>

                <div class="utn-form-item">
                    <label class="utn-label">Moneda</label>
                    <input name="monedapre" class="utn-field" value="$" required />
                </div>

                <div class="utn-form-item">
                    <label asp-for="duracionpro" class="utn-label">Duración</label>
                    <input asp-for="duracionpro" class="utn-field" type="text" placeholder="Ej. 2 semestres" />
                    <span asp-validation-for="duracionpro" class="text-danger"></span>
                </div>

                @* Estado fijo para evitar "Activo" vs "activo" *@
                <div class="utn-form-item">
                    <label asp-for="estadopro" class="utn-label">Estado Inicial</label>
                    <input asp-for="estadopro" class="utn-field" value="activo" readonly />
                    <span asp-validation-for="estadopro" class="text-danger"></span>
                </div>

                <div class="utn-form-item utn-full-width">
                    <label asp-for="descripcionpro" class="utn-label">Descripción del Programa</label>
                    <textarea asp-for="descripcionpro" class="utn-field" rows="4"></textarea>
                    <span asp-validation-for="descripcionpro" class="text-danger"></span>
                </div>

                <div class="utn-footer">
                    <a asp-action="ListProgramas" class="utn-btn-cancel">
                        <i data-lucide="x" style="width:18px;"></i> Cancelar
                    </a>
                    <button type="submit" class="utn-btn-save">
                        <i data-lucide="save" style="width:18px;"></i> Guardar Programa
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
        });
    </script>
}
