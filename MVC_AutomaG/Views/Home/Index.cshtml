@{
    ViewData["Title"] = "Dashboard";
}

<div class="container pt-0 pb-5">



    <!-- RECUADRO SUPERIOR -->
    <div class="card shadow-sm border-0 rounded-4 mb-5">
        <div class="card-body py-4 px-4">
            <h2 class="fw-bold mb-1">Panel de Control Administrativo</h2>
            <p class="text-muted mb-0">
                Sistema de Gestión de Aspirantes - Facultad de Posgrado
            </p>
        </div>
    </div>

    <!-- TARJETAS -->
    <div class="row g-4 mb-4">

        <!-- Total Aspirantes -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <p class="text-muted mb-2">Total Aspirantes</p>
                        <h2 class="fw-bold mb-0">@ViewBag.TotalAspirantes</h2>
                    </div>
                    <div class="bg-danger text-white d-flex justify-content-center align-items-center rounded-circle"
                         style="width:60px; height:60px;">
                        <i class="bi bi-people fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Maestrías Activas -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <p class="text-muted mb-2">Maestrías Activas</p>
                        <h2 class="fw-bold mb-0">@ViewBag.MaestriasActivas</h2>
                    </div>
                    <div class="bg-dark text-white d-flex justify-content-center align-items-center rounded-circle"
                         style="width:60px; height:60px;">
                        <i class="bi bi-mortarboard fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- En Proceso -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <p class="text-muted mb-2">En Proceso</p>
                        <h2 class="fw-bold mb-0">@ViewBag.EnProceso</h2>
                    </div>
                    <div class="bg-success text-white d-flex justify-content-center align-items-center rounded-circle"
                         style="width:60px; height:60px;">
                        <i class="bi bi-person-check fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Nuevos -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-4 h-100">
                <div class="card-body d-flex justify-content-between align-items-center p-4">
                    <div>
                        <p class="text-muted mb-2">Nuevos (7 días)</p>
                        <h2 class="fw-bold mb-0">@ViewBag.Nuevos</h2>
                    </div>
                    <div class="bg-warning text-white d-flex justify-content-center align-items-center rounded-circle"
                         style="width:60px; height:60px;">
                        <i class="bi bi-person-plus fs-4"></i>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- BOTONES -->
    <div class="d-flex gap-3 mb-5">

        <a asp-controller="Aspirantes" asp-action="ListAspirantes"
           class="btn btn-danger px-4 py-2 rounded-3 shadow-sm">
            <i class="bi bi-eye me-2"></i>
            Ver Todos los Registros
        </a>

        <a asp-controller="Aspirantes" asp-action="ReporteExcel"
           class="btn btn-outline-danger px-4 py-2 rounded-3 shadow-sm">
            <i class="bi bi-file-earmark-excel me-2"></i>
            Exportar a Excel
        </a>

    </div>

    <!-- ACTIVIDAD RECIENTE -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4">Actividad Reciente del Sistema</h4>

            @if (ViewBag.ActividadReciente != null)
            {
                foreach (var item in ViewBag.ActividadReciente)
                {
                    var tiempo = DateTime.Now - item.fecharegistro;
                    string textoTiempo;

                    if (tiempo.TotalMinutes < 60)
                        textoTiempo = $"Hace {Math.Floor(tiempo.TotalMinutes)} minutos";
                    else if (tiempo.TotalHours < 24)
                        textoTiempo = $"Hace {Math.Floor(tiempo.TotalHours)} horas";
                    else
                        textoTiempo = $"Hace {Math.Floor(tiempo.TotalDays)} días";

                    <div class="d-flex align-items-start mb-4">

                        <div class="bg-danger text-white rounded-circle d-flex justify-content-center align-items-center"
                             style="width:55px; height:55px;">
                            <i class="bi bi-person-fill fs-5"></i>
                        </div>

                        <div class="ms-3">
                            <p class="mb-1">
                                <strong>@item.nombreasp</strong>
                                se registró en
                                <strong>@item.programainteres</strong>
                            </p>

                            <small class="text-muted">
                                @textoTiempo
                            </small>
                        </div>

                    </div>
                }
            }
            else
            {
                <p class="text-muted">No hay actividad reciente.</p>
            }

        </div>
    </div>

</div>
