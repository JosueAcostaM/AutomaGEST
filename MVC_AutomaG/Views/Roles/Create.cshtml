@model Modelos_AutomaG.Roles

@{
    ViewData["Title"] = "Registrar Rol";
}

<link rel="stylesheet" href="~/css/programa-form.css" asp-append-version="true" />
@if (User.IsInRole("Super Administrador")){
<div class="utn-form-container">

    <div class="utn-form-header">
        <h1 class="utn-title">Nuevo Rol</h1>
        <p class="utn-subtitle">Complete la información para añadir un nuevo rol</p>
    </div>

    <div class="utn-card">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" style="margin-bottom:1rem;">
                    @ViewBag.Error
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:1rem;"></div>

            <div class="utn-grid">

                <div class="utn-form-item">
                    <label asp-for="nombrerol" class="utn-label">Nombre del Rol</label>
                    <input asp-for="nombrerol" class="utn-field" placeholder="Ej. Administrador" required />
                    <span asp-validation-for="nombrerol" class="text-danger"></span>
                </div>

                <div class="utn-footer">
                    <a asp-action="ListRoles" class="utn-btn-cancel">
                        <i data-lucide="x" style="width:18px;"></i> Cancelar
                    </a>
                    <button type="submit" class="utn-btn-save">
                        <i data-lucide="save" style="width:18px;"></i> Guardar Rol
                    </button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            lucide.createIcons();
        });
    </script>
}
}  